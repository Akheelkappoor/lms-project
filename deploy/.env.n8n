# n8n Configuration
NODE_ENV=production
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=your_secure_password_here

# Server Configuration
N8N_HOST=0.0.0.0
N8N_PORT=5678
N8N_PROTOCOL=http
WEBHOOK_URL=http://your-ec2-public-ip:5678

# Database Configuration for n8n internal storage
DB_TYPE=postgresdb
DB_POSTGRESDB_HOST=lms.c9c8kyy28xrq.ap-south-1.rds.amazonaws.com
DB_POSTGRESDB_PORT=5432
DB_POSTGRESDB_DATABASE=postgres
DB_POSTGRESDB_USER=LMS_database
DB_POSTGRESDB_PASSWORD=pkczZdj8vo6FjWEa4SWF
DB_POSTGRESDB_SSL=require

# Encryption key for credentials
N8N_ENCRYPTION_KEY=your_32_character_encryption_key_here

# Email Configuration (for notifications)
N8N_EMAIL_MODE=smtp
N8N_SMTP_HOST=smtp.gmail.com
N8N_SMTP_PORT=587
N8N_SMTP_USER=your-email@gmail.com
N8N_SMTP_PASS=your-app-password
N8N_SMTP_SSL=true

# Timezone
GENERIC_TIMEZONE=UTC

# Logging
N8N_LOG_LEVEL=info
N8N_LOG_OUTPUT=console

# Security
N8N_SECURE_COOKIE=false
N8N_DISABLE_PRODUCTION_MAIN_PROCESS=false